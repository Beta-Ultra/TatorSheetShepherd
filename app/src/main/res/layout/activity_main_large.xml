<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.teamtators.tatorsheetshepherd.MainActivity">

    <GridView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="910dp"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/btnDownloadMatch"
        android:enabled="false"
        android:onClick="buttonMatchHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOWNLOAD MATCH TABLE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="920dp"
        android:layout_marginLeft="290dp" />

    <Button
        android:id="@+id/btnDownloadAvg"
        android:enabled="false"
        android:onClick="buttonAvgHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOWNLOAD AVERAGE TABLE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="920dp"
        android:layout_marginRight="290dp" />

    <Button
        android:id="@+id/btnClear"
        android:enabled="true"
        android:onClick="buttonMatchClearHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLEAR DATA"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="815dp"
        android:layout_marginRight="290dp"/>

    <Button
        android:id="@+id/btnFilter"
        android:enabled="true"
        android:onClick="buttonFilterHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="815dp"
        android:layout_marginLeft="290dp"/>


</RelativeLayout>